<div class="container">
  <h3>Log in</h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group form-singup">
    <%= f.label :email %><br />
    <%= f.email_field :email, :class=>'form-control text singup', autofocus: true %>
  </div>

  <div class="field form-group form-singup">
    <%= f.label :password %><br />
    <%= f.password_field :password, :class=>'form-control text singup', autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field form-group form-singup">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions form-group form-singup">
    <%= f.submit "Log in", :class=>'btn btn-info btn-singup'  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
